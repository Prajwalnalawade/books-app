<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="28dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:background="#DAD5D5"
            android:id="@+id/one"
            android:padding="10dp"
            android:elevation="98dp">
            <ImageButton
                android:id="@+id/notebook1"
                android:layout_width="150dp"
                android:elevation="38dp"
                android:layout_height="185dp"
                android:src="@drawable/d1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/the"
                android:elevation="1dp"
                android:textColor="#0B0000"
                android:layout_below="@+id/notebook1"
                android:textSize="20dp"
                android:text="Time Machine"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:layout_marginLeft="185dp"
            android:id="@+id/two"
            android:background="#DAD5D5"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/janeeyre1"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:src="@drawable/d2" />
            <TextView
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="#0B0000"
                android:layout_below="@+id/janeeyre1"
                android:gravity="center"
                android:textSize="20dp"
                android:text="After the Cure"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:id="@+id/three"
            android:layout_below="@+id/one"
            android:padding="10dp"
            android:background="#DAD5D5"
            android:layout_marginTop="20dp">
            <ImageButton
                android:id="@+id/wuthering1"
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/wutheringt"
                android:textColor="#0B0000"
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/wuthering1"
                android:textSize="18dp"
                android:text="           Anthem"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:layout_below="@+id/two"
            android:id="@+id/four"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/three"
            android:background="#DAD5D5"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/Pride1"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d4"/>

            <TextView
                android:id="@+id/pridet"
                android:layout_width="match_parent"
                android:layout_below="@+id/Pride1"
                android:gravity="center"
                android:textColor="#0B0000"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Machine Stops"
                android:textSize="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:background="#DAD5D5"
            android:id="@+id/five"
            android:layout_below="@+id/three"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:elevation="98dp">
            <ImageButton
                android:id="@+id/outlander1"
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/outlandert"
                android:elevation="1dp"
                android:textColor="#0B0000"
                android:layout_below="@+id/outlander1"
                android:textSize="20dp"
                android:gravity="center"
                android:text="20000 Leagues"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:layout_below="@+id/four"
            android:id="@+id/six"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/three"
            android:background="#DAD5D5"
            android:padding="10dp">
            <ImageButton
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:id="@+id/fault"
                android:src="@drawable/d6"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_below="@+id/fault"
                android:textColor="#0B0000"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Princess of Mars"
                android:textSize="18dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:background="#DAD5D5"
            android:id="@+id/seven"
            android:layout_below="@+id/five"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:elevation="98dp">
            <ImageButton
                android:id="@+id/img7"
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d7"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt7"
                android:elevation="1dp"
                android:textColor="#0B0000"
                android:layout_below="@+id/img7"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Invisible Man"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:layout_below="@+id/seven"
            android:id="@+id/nine"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ten"
            android:background="#DAD5D5"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/img9"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d8"/>

            <TextView
                android:id="@+id/txt9"
                android:layout_width="match_parent"
                android:layout_below="@+id/img9"
                android:gravity="center"
                android:textColor="#0B0000"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Accelerando"
                android:textSize="18dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:background="#DAD5D5"
            android:id="@+id/ten"
            android:layout_below="@+id/seven"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:elevation="98dp">
            <ImageButton
                android:id="@+id/img10"
                android:layout_width="150dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d9"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txt10"
                android:elevation="1dp"
                android:textColor="#0B0000"
                android:layout_below="@+id/img10"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Dropped"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="245dp"
            android:layout_below="@+id/six"
            android:id="@+id/eight"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/seven"
            android:background="#DAD5D5"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/img8"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:elevation="38dp"
                android:src="@drawable/d10"/>

            <TextView
                android:id="@+id/txt8"
                android:layout_width="match_parent"
                android:layout_below="@+id/img8"
                android:gravity="center"
                android:textColor="#0B0000"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Centre Earth"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>